<Window x:Class="MessagingApp.ViewMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessagingApp"
        mc:Ignorable="d"
        Title="View Messages" Height="417.104" Width="535.959">
    <Grid>
        <ComboBox x:Name="TypeComboBox" HorizontalAlignment="Left" Margin="122,29,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="TypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Tweet"/>
            <ComboBoxItem Content="SMS"/>
            <ComboBoxItem Content="E-Mail"/>
        </ComboBox>
        <Label x:Name="TypeLabel"  Content="Message type" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="IDComboBox" HorizontalAlignment="Left" Margin="122,63,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False" SelectionChanged="IDComboBox_SelectionChanged" />
        <Label x:Name="MsgIDLabel"  Content="Message ID" HorizontalAlignment="Left" Margin="38,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MsgTextBox"  HorizontalAlignment="Left" Height="251" Margin="27,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="473" VerticalScrollBarVisibility="Auto" FontSize="16" IsReadOnly="True"/>

    </Grid>
</Window>
